<% layout('layouts/boilerplate')%>
    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
        <div class="row align-items-center g-lg-5 py-5">
            <div class="col-lg-7 text-center text-lg-start">
                <h1 class="display-4 fw-bold lh-1 mb-3">Register</h1>
                <p class="col-lg-10 fs-4">Sign Up for the best experience in your life.</p>
            </div>
            <div class="col-md-10 mx-auto col-lg-5 card p-3">
                <form action="/register" method="POST" class="validated-form" novalidate class="p-4 p-md-5 border rounded-3 bg-light">
                    <div class="form-floating mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" required autofocus>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success btn-block">Register</button>
                </form>
            </div>
        </div>
    </div>